{{ ansible_managed | comment }}

global
{% if  ansible_facts["distribution"] == "Archlinux" %}
  log /dev/log local0 info
{% else %}
  log /dev/log  local0
  log /dev/log  local1 notice
{% endif %}
{% if haproxy_socket != '' %}
  stats socket {{ haproxy_socket }} level admin
{% endif %}
{% if haproxy_chroot != '' %}
  chroot {{ haproxy_chroot }}
{% endif %}
  user {{ haproxy_user }}
  group {{ haproxy_group }}
  daemon
  pidfile /run/haproxy.pid
{% for global_param in haproxy_global_params %}
  {{ global_param }}
{% endfor %}

defaults
  log global
  option  dontlognull
  timeout connect {{ haproxy_connect_timeout }}
  timeout client {{ haproxy_client_timeout }}
  timeout server {{ haproxy_server_timeout }}
{% if ansible_facts["distribution"] == 'Ubuntu' %}
  errorfile 400 /etc/haproxy/errors/400.http
  errorfile 403 /etc/haproxy/errors/403.http
  errorfile 408 /etc/haproxy/errors/408.http
  errorfile 500 /etc/haproxy/errors/500.http
  errorfile 502 /etc/haproxy/errors/502.http
  errorfile 503 /etc/haproxy/errors/503.http
  errorfile 504 /etc/haproxy/errors/504.http
{% endif %}

{% for front in haproxy_frontends %}
frontend {{ front.name }}
{% for b in front.binds %}
    bind {{ b.addr }}:{{ b.port }} {{ b.extra | default('') }}
{% endfor %}
    mode {{ front.mode }}
{% for o in front.options %}
    {{ o.name }} {{ o.value }}
{% endfor %}
{% for acl,params in front.acl.items() %}
    acl {{ acl }} {{ params }}
{% endfor %}
{% for back in front.use_backends %}
    use_backend {{ back }}
{% endfor %}
{% for param,value in front.extra_params.items() %}
    {{ param }} {{ value }}
{% endfor %}
{% endfor %}

{% for back in haproxy_backends %}
backend {{ back.name }}
    mode {{ back.mode }}
{% for option,params in back.option.items() %}
    option {{ option }} {{ params }}
{% endfor %}
{% for param,value in back.extra_params.items() %}
    {{ param }} {{ value }}
{% endfor %}
{% for name,params in back.servers.items() %}
    server {{ name }} {{ params }}
{% endfor %}
{% endfor %}

